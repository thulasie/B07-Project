<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/home_fragment_parent_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Viewing Child: "
            android:textSize="20dp"
            android:layout_gravity="center"
            android:layout_marginVertical="20dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="name"
            android:id="@+id/parent_home_child_name"
            android:textSize="18dp"
            android:layout_gravity="center"/>

        <Space
            android:layout_width="0dp"
            android:layout_height="20dp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Daily check in"
            android:layout_gravity="center"
            android:textSize="20dp"
            android:id="@+id/parent_home_start_check_in"/>
        <Space
            android:layout_width="0dp"
            android:layout_height="20dp"/>

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_margin="20dp">
            <LinearLayout
                android:layout_width="0dp"
                android:orientation="vertical"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Today's zone"
                    android:textSize="20dp"
                    android:layout_gravity="center" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ZONE"
                    android:textSize="20dp"
                    android:layout_gravity="center"
                    android:id="@+id/parent_home_stats_zone"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:orientation="vertical"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Current streak"
                    android:textSize="20dp"
                    android:layout_gravity="center"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="STREAK"
                    android:textSize="20dp"
                    android:layout_gravity="center"
                    android:id="@+id/parent_home_stats_streak"/>

            </LinearLayout>
        </LinearLayout>
        <Space
            android:layout_width="0dp"
            android:layout_height="20dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Options"
            android:textSize="20dp"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"/>

        <Space
            android:layout_width="0dp"
            android:layout_height="20dp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter PB"
            android:layout_gravity="center"
            android:id="@+id/parent_home_enter_pb"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="20dp">
            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Enter PEF"
                android:layout_weight="1"
                android:id="@+id/parent_home_enter_pef"/>
            <Space
                android:layout_width="20dp"
                android:layout_height="0dp"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Medicine log"
                android:layout_weight="1"
                android:id="@+id/parent_home_enter_log_medicine"/>
        </LinearLayout>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Exit"
            android:layout_gravity="center"
            android:id="@+id/parent_home_exit_button"/>

    </LinearLayout>

</ScrollView>